@page "/streamrender"

@attribute [StreamRendering]

<p>Counter: @_counter</p>

@code {

    int _counter = 0;

    // on init
    protected override async Task OnInitializedAsync()
    {
        for (var i = 0; i < 10; i++)
        {
            _counter++;
            StateHasChanged();
            await Task.Delay(500);
        }
    }

}