<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">AutoFront</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler"/>

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        @foreach (var item in _navItems)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="@item.Item2">
                    <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> @item.Item1
                </NavLink>
            </div>
        }
    </nav>
</div>

@code{

    private List<Tuple<string, string>> _navItems =
    [
        new Tuple<string, string>("Counter", "counter"),
        new Tuple<string, string>("Weather", "weather"),
        new Tuple<string, string>("Test", "test"),
        new Tuple<string, string>("Form", "form"),
        new Tuple<string, string>("Quick grid", "quickgrid"),
        new Tuple<string, string>("Stream render", "streamrender"),
    ];

}

