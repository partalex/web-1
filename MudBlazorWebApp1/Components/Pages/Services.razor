@page "/services"

<PageTitle>@PageName</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">@PageName</MudText>

<MudGrid>
    @foreach (var partner in _allServices)
    {
        <MudItem xs="12" sm="6">
            <MudCard>
                <MudCardMedia Image="@partner.ImageUrl"/>
                <MudCardContent>
                    <MudText Typo="Typo.h6" GutterBottom="true">@partner.Name</MudText>
                    <MudText Typo="Typo.body2">@partner.Description</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
    }
</MudGrid>


@code {

    private const string PageName = "Services";

    class ServiceItem(string name, string description, string imageUrl)
    {
        public string Name { get; } = name;
        public string Description { get; } = description;
        public string ImageUrl { get; } = imageUrl;
    }

    private readonly IEnumerable<ServiceItem> _allServices =
    [
        new ServiceItem("Service 1", "Service 1 Description", "Images/Square.png"),
        new ServiceItem("Service 2", "Service 2 Description", "Images/Square.png"),
        new ServiceItem("Service 3", "Service 3 Description", "Images/Square.png"),
        new ServiceItem("Service 4", "Service 4 Description", "Images/Square.png"),
        new ServiceItem("Service 5", "Service 5 Description", "Images/Square.png"),
        new ServiceItem("Service 6", "Service 6 Description", "Images/Square.png"),
        new ServiceItem("Service 7", "Service 7 Description", "Images/Square.png"),
    ];

}