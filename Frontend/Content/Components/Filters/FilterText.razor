@using Frontend.Models.Filters
@inject ILogger<FilterText> Logger

<MudExpansionPanel Text="@Model.Name" Expanded="@true">
    <MudInputString @bind-Value="Model.Value" Label="@Model.Name"
                    Placeholder="@Model.Placeholder"
                    TextChanged="HandleChange"
    />
</MudExpansionPanel>

@code{
    [Parameter] public required FilterTextModel Model { get; init; }

    private void HandleChange(string value)
    {
        Model.Value = value;
        Model.FilterChanged();
    }

}