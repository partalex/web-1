@page "/gallery"
@using Frontend.Content.Components

<PageTitle>@PageName</PageTitle>

<Heading1
    Title="@PageName"
/>

<MudGrid>
    @for (var i = 0; i < NumberOfColumns; i++)
    {
        <MudItem xs="12" sm="6" xl="4" xxl="3">
            <Carousel/>
        </MudItem>
    }
</MudGrid>


@code {
    private const string PageName = "Gallery";

    private const int NumberOfColumns = 5;
}
