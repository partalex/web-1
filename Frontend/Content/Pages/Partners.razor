@page "/partners"
@using Frontend.Content.Components
@inject NavigationManager NavigationManager

<PageHeading1 Title="@PageName"/>

<MudGrid>
    @foreach (var partner in _allPartners)
    {
        <GridItem1>
            <MudCard Elevation="2">
                @* <MudCardMedia Image="@partner.ImagePath" Height="400"/> *@
                <MudImage Fluid="true" Class="rounded-t-lg" Src="@partner.ImagePath"/>
                <MudCardContent>
                    <MudPaper Class="d-flex justify-space-between flex-grow-1 gap-4" Elevation="0">
                        <MudText Typo="Typo.h5">@partner.Name</MudText>
                        <MudLink Class="align-self-end" Href="@partner.Link" Color="Color.Primary">Poseti</MudLink>
                        @* <MudText Typo="Typo.body2">@partner.Description</MudText> *@
                        @* <MudText Typo="Typo.body2">Activities</MudText> *@
                    </MudPaper>
                </MudCardContent>
            </MudCard>
        </GridItem1>
    }
</MudGrid>

@code {

    private const string PageName = "Partneri";

    class Partner(string name, string description, string link, string imagePath)
    {
        public string Name { get; } = name;
        public string Description { get; } = description;
        public string Link { get; } = link;
        public string ImagePath { get; } = imagePath;
    }

    private readonly IEnumerable<Partner> _allPartners = new List<Partner>
    {
        new("Blum", "An international company specializing in the production of functional furniture fittings, such as hinges, lift systems, and drawer systems, founded in 1952 and headquartered in Hoechst, Austria.", "https://www.blum.com", "Partners/Blum.webp"),
