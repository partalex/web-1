@page "/partners"
@using Frontend.Content.Components
@inject NavigationManager NavigationManager

<PageTitle>@PageName</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">@PageName</MudText>

<MudGrid>
    @foreach (var partner in _allPartners)
    {
        <GridItem1>
            <MudCard>
                <MudCardMedia Image="Images/Square.png" Height="400"/>
                <MudCardContent>
                    <MudText Typo="Typo.h5">@partner.Name</MudText>
                    <MudText Typo="Typo.body2">@partner.Description</MudText>
                    @* <MudText Typo="Typo.body2">Activities</MudText> *@
                </MudCardContent>
                <MudCardActions>
                    @* <MudLink Href="https://mudblazor.com" Target="_blank" Typo="Typo.body2" Color="Color.Primary"> *@
                    @* <b>Visit</b> *@
                    @* </MudLink> *@
                    <MudButton OnClick="() => NavigationManager.NavigateTo(partner.Link)"
                               Variant="Variant.Text" Color="Color.Primary">Visit
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </GridItem1>
    }
</MudGrid>


@code {

    private const string PageName = "Partners";

    class Partner(string name, string description, string link, string imageUrl)
    {
        public string Name { get; } = name;
        public string Description { get; } = description;
        public string Link { get; } = link;
        public string ImageUrl { get; } = imageUrl;
    }

    private readonly IEnumerable<Partner> _allPartners = new List<Partner>
    {
        new("Blanco", "A company specializing in high-quality kitchen and bathroom fixtures, including sinks, faucets, and accessories.", "https://www.blanco.com", "Partners/Blanco.webp"),
