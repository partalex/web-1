@page "/faq"
@using Frontend.Content.Components

<PageHeading1 Title="@PageName"/>

<MudGrid>
    @foreach (var faq in _allFaqs)
    {
        <GridItem1>
            <MudCard>
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">@faq.Question</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudText>@faq.Answer</MudText>
                </MudCardContent>
            </MudCard>
        </GridItem1>
    }
</MudGrid>

@code {
    private const string PageName = "Pitanja";

    private readonly IEnumerable<FaqItem> _allFaqs = new List<FaqItem>
    {
        new("Koji materijali se koriste u nameštaju?", "Koristimo visokokvalitetno drvo i metal."),
        new("Mogu li da prilagodim nameštaj?", "Da, nudimo opcije prilagođavanja."),
        new("Da li materijale mogu kupiti odvojeno?", "Da, možete kupiti materijale odvojeno."),
        new("Koliko traje isporuka?", "Isporuka traje 3-4 nedelje."),
        new("Da li postoji garancija na nameštaj?", "Da, zavisi od izbora proizvoda."),
        new("Da li se uloga crtanje naplaćuje ako se odlučim za kupovinu?", "Ne, uloga crtanje se ne naplaćuje ako se odlučite za kupovinu."),
        new("Da li se vršite montažu nameštaja?", "Da, vršimo montažu nameštaja."),
    };

    class FaqItem(string question, string answer)
    {
        public string Question { get; } = question;
        public string Answer { get; } = answer;
    }

}